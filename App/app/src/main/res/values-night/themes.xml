<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Custodian" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/true_black</item>
        <item name="colorPrimaryVariant">@color/true_black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pith_white</item>
        <item name="colorSecondaryVariant">@color/pith_white</item>
        <item name="colorOnSecondary">@color/pith_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pith_white</item>
    </style>
    <style name="MyViewTheme" parent="@android:style/TextAppearance">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyRow" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/ic_back</item>
    </style>
</resources>